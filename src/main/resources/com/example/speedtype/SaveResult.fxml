<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="250.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.speedtype.SaveResultController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="100.0" prefHeight="250.0" prefWidth="400.0" spacing="20.0">
         <children>
            <Text fx:id="wpmMessage" strokeType="OUTSIDE" strokeWidth="0.0" text="Your WPM is ...">
               <font>
                  <Font name="Courier New Bold" size="38.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Do you wish to save your score?" textAlignment="CENTER">
               <font>
                  <Font name="Courier New Bold" size="23.0" />
               </font>
            </Text>
            <TextField fx:id="nameField" />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
               <children>
                  <Button fx:id="closeButton" mnemonicParsing="false" onMousePressed="#closeWindow" text="Close" />
                  <Button mnemonicParsing="false" onMousePressed="#saveScore" text="Save score" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
